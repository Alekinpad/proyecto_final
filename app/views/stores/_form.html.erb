<%= form_for @store, html: {multipart: true} do |f| %>
  <% if @store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
      <% @store.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :photo %><br>
    <%= f.file_field :photo %>
    <%= f.hidden_field :photo_cache %>
    <%= image_tag(@store.photo) if @store.photo? %>
  </div>
  <div class="field">
    <%= f.label :cover_photo %><br>
    <%= f.file_field :cover_photo %>
    <%= f.hidden_field :cover_photo_cache %>
    <%= image_tag(@store.cover_photo) if @store.cover_photo? %>
  </div>
  <div class="field">
    <%= f.label :facebook_link %><br>
    <%= f.text_field :facebook_link %>
  </div>
  <div class="field">
    <%= f.label :instagram_link %><br>
    <%= f.text_field :instagram_link %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br>
    <%= f.text_field :user_id %>
  </div>
  <div class="field">
    <%= f.label "Metros de Encuentro" %><br>
    <%= f.label "Línea: 1" %><br>
    <% @metros.each do |metro| %>
      <% if metro.line.split(", ").include? "1" %>
        <%= check_box_tag :metros, metro %>
        <%= label_tag metro %>
      <% end %>
    <% end %>
    <br>
    <%= f.label "Línea: 2" %><br>
    <% @metros.each do |metro| %>
      <% if metro.line.split(", ").include? "2" %>
        <%= check_box_tag :metros, metro %>
        <%= label_tag metro %>
      <% end %>
    <% end %>
    <br>
    <%= f.label "Línea: 4" %><br>
    <% @metros.each do |metro| %>
      <% if metro.line.split(", ").include? "4" %>
        <%= check_box_tag :metros, metro %>
        <%= label_tag metro %>
      <% end %>
    <% end %>
    <br>
    <%= f.label "Línea: 4a" %><br>
    <% @metros.each do |metro| %>
      <% if metro.line.split(", ").include? "4a" %>
        <%= check_box_tag :metros, metro %>
        <%= label_tag metro %>
      <% end %>
    <% end %>
    <br>
    <%= f.label "Línea: 5" %><br>
    <% @metros.each do |metro| %>
      <% if metro.line.split(", ").include? "5" %>
        <%= check_box_tag :metros, metro %>
        <%= label_tag metro %>
      <% end %>
    <% end %>
    <br>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
