<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Photo</th>
      <th>Price</th>
      <th>Stock</th>
      <th>Store</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.photo %></td>
        <td><%= product.price %></td>
        <td><%= product.stock %></td>
        <td><%= product.store %></td>
        <td><%= link_to 'Show', [@store, product] %></td>
        <td><%= link_to 'Edit', edit_store_product_path(@store, product) %></td>
        <td><%= link_to 'Destroy', [@store, product], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>